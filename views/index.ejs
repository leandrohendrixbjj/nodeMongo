<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1>
    <%= title %>
  </h1>
  <p>Welcome to <%= title %>
  </p>
  <table>
    <thead>
      <tr>
        <td>Nome</td>
        <td>Idade</td>
        <td>Sexo</td>
        <td>UF</td>
        <td>Ações</td>
      </tr>
    </thead>
    <% customers.forEach(customer=> { %>
      <tbody>
        <tr>
          <td>
            <%=customer.nome%>
          </td>
          <td>
            <%=customer.idade%>
          </td>
          <td>
            <%=customer.sexo%>
          </td>
          <td>
            <%=customer.uf%>
          </td>
          <td>
            <a href="/edit/<%=customer._id%>" title="Editar">Edit</a>
          </td>
          <td>
            <a href="/delete/<%=customer._id%>" title="Editar"
              onclick="return confirm('Deseja excluir esse registro?');">Delete</a>
          </td>
        </tr>
      </tbody>
      <%})%>
  </table>
  <a href="/new">Cadastrar novo</a>
</body>

</html>